<div class="text-center"><%= render 'searches/search'%></div>

<h2>Books search for "<%= @content %>"</h2>

<table class="table table-hover table-inverse">

  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= link_to user_path(book.user) do %>
        <%= image_tag book.user.get_profile_image(50,50) %>
          <% end %>
          <td><%= link_to book.title,book %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>